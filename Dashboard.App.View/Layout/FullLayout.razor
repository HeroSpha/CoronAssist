@inherits LayoutComponentBase
<MainLayout>
  <BodyContent>
    @Body
  </BodyContent>
  <ProfileContent Context="profile">
    <Profile Class="@profile.Item1"
             Style="@profile.Item2"
             Name="CoronAssist"
             Avatar="./images/avatars/avatar_11.png"
             Bio="@State?.User?.Email">
    </Profile>
  </ProfileContent>
  <NavigationContent Context="navigation">
    <Navigation Class="@navigation.Item1"
                Style="@navigation.Item2"
                Items="@Items">
    </Navigation>
  </NavigationContent>
  <FooterContent>
    <Footer DomainName="Powered by Digihelp Pty Ltd"
            DomainUrl="https://digihelpsa.co.za/"
            Copyright="@DateTime.Now.Year.ToString()">
      Created in response to outbreak of Corona Virus
    </Footer>
  </FooterContent>
</MainLayout>

