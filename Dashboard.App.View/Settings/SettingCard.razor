<Card Class="settings-password-root">
  <form>
    <CardHeader Subheader="System Settings"
                Title="Settings" />
    <Divider />
    <CardContent>
      <TextField FullWidth
                 Label="Physical Address"
                 Margin="@Margin.Dense"
                 
                 Value="@Address"
                 Variant="@ControlVariant.Outlined" />
      <TextField FullWidth
                 Label="Screening Fee"
                 Margin="@Margin.Dense"
                 
                 Value="@Address"
                 Variant="@ControlVariant.Outlined" />
      <TextField Style="margin-top: 1rem;"
                 FullWidth
                 Label="Confirm password"
                 Margin="@Margin.Dense"
                 Name="Confirm"
                 Required="true"
                 Value=""
                 Variant="@ControlVariant.Outlined" />
    </CardContent>
    <Divider />
    <CardActions>
      <Button Color="@Color.Primary"
              Variant="@ButtonVariant.Outlined"
              OnClick="@UpdateSettings">
        Update
      </Button>
    </CardActions>
  </form>
</Card>
