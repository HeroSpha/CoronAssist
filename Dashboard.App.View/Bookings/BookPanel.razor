<Grid Container
      Spacing="@Spacing.Three">
  @foreach (var book in Bookings)
  {
      <Grid Item
            @key="@book.BookId"
            Large="@GridSize.Four"
            Medium="@GridSize.Six"
            Small="@GridSize.Twelve"
            ExtraLarge="@GridSize.Three">
        <BookCard Book="@book" DeclineBooking="@DeclineBooking"  />
      </Grid>
  }
</Grid>